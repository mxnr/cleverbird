{% spaceless %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="description"
          content="Educational platform with an extended contribution option and a lighter version for users from the less developed countries.">
    <meta name="author" content="Dmitry Semenov<moxnrl@gmail.com>">

    <link rel="apple-touch-icon" sizes="57x57" href="/images/favicon/apple-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="/images/favicon/apple-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="/images/favicon/apple-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="/images/favicon/apple-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="/images/favicon/apple-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="/images/favicon/apple-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="/images/favicon/apple-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="/images/favicon/apple-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/images/favicon/apple-icon-180x180.png">
    <link rel="icon" type="image/png" sizes="192x192"  href="/images/favicon/android-icon-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="/images/favicon/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon/favicon-16x16.png">
    <link rel="manifest" href="/images/favicon/manifest.json">

    <title>{% block title %}CleverBird platform{% endblock %}</title>

    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"
          crossorigin="anonymous">

    {% block stylesheets %}
        {% stylesheets filter="compass"
            'bundles/cleverbird/css/styles.sass'
        %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    {% endblock %}
</head>

<body>
{% block navbar %}
    {% include '@CleverBird/Partials/navbar.html.twig' %}
{% endblock %}
{% if app.session.flashbag.keys > 0 %}
    <div class="container">
        {% for type, messages in app.session.flashbag.all %}
            {% for message in messages %}
                <div class="alert alert-{{ type }} alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <strong>Well done!</strong> {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
{% endif %}
{% block body %}{% endblock %}
{% block footer %}
    <div class="container">
        <footer class="footer">
            <p>
                &copy; {{ 'now'|date('Y') }} <a href="mailto:moxnrl@gmail.com">Muffin Man</a>,
                with his <a href="https://www.instagram.com/p/BBKpq-VvE45/?taken-by=mxnr">dog</a>.
                Project created on <a href="https://koding.com">koding</a> hackathon.
            </p>
        </footer>
    </div>
{% endblock %}
{% block javascripts %}
    {% javascripts
        'https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js'
        'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js'
        'bundles/cleverbird/js/scripts.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
</body>
</html>
{% endspaceless %}
