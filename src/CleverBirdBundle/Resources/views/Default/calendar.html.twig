{% extends '@CleverBird/Layouts/main.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
        'vendor/fullcalendar/dist/fullcalendar.css'
    filter='?uglifycss' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ol class="breadcrumb">
                    <li><a href="{{ path('clever_bird_homepage') }}">Home</a></li>
                    <li class="active">Calendar</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-md-6">
                <h1 class="m-top-0">Calendar</h1>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div id='calendar'></div>
                <br/><br/>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts
        'vendor/moment/moment.js'
        'vendor/fullcalendar/dist/fullcalendar.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script>
        $(document).ready(function() {

            $('#calendar').fullCalendar({
                header: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'month,agendaWeek,agendaDay'
                },
                defaultDate: '{{ "now" | date('Y-m-d') }}',
                editable: true,
                eventLimit: true, // allow "more" link when too many events
                events: {{ courses | json_encode | raw }}
            });

        });
    </script>
{% endblock %}
