{% extends '@CleverBird/Layouts/main.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ol class="breadcrumb">
                    <li><a href="{{ path('clever_bird_homepage') }}">Home</a></li>
                    <li class="active">Courses list</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-md-6">
                <h1 class="m-top-0">Courses list</h1>
            </div>
        </div>
        <hr/>
        {% if courses %}
            {% include '@CleverBird/Partials/course-list.html.twig' %}
        {% else %}
            <div class="alert alert-info">
                Currently we didn't have any courses, but you can <a href="{{ path('course_new') }}">create</a> the first one!
            </div>
        {% endif %}
    </div>
{% endblock %}
