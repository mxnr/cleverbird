{% block navbar %}
    <div class="container">
        <div class="header clearfix">
            <nav>
                <ul class="nav nav-pills pull-right">
                    {% if app.user %}
                        <li role="presentation">
                            <a href="#">
                                <span class="glyphicon glyphicon-education"></span> My Courses
                            </a>
                        </li>
                        <li role="presentation">
                            <a href="#">
                                <span class="glyphicon glyphicon-book"></span> Public Courses
                            </a>
                        </li>
                        <li role="presentation">
                            <a href="#">
                                <span class="glyphicon glyphicon-calendar"></span> Calendar
                            </a>
                        </li>
                        <li role="presentation" class="dropdown">
                            <a class="dropdown-toggle"
                               data-toggle="dropdown"
                               href="#"
                               role="button"
                               aria-haspopup="true"
                               aria-expanded="false">
                                <img src="{{ app.user.avatar }}&s=40" width="20" height="20"/> {{ app.user.username -}}
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Profile</a></li>
                                <li><a href="#">Settings</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="{{ path('logout') }}?" role="button">Logout</a></li>
                            </ul>
                        </li>
                    {% else %}
                        <li role="presentation">
                            <a href="{{ path('login') }}" role="button">Login</a>
                        </li>
                        <li role="presentation" class="active">
                            <a href="{{ path('registration') }}" role="button">Sign Up</a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
            {#<img src="{{ asset('bundles/cleverbird/img/logo.png') }}" alt="Clever Bird" height="50"/>#}
            <a href="{{ path('clever_bird_homepage') }}">

                <h3 class="text-muted">
                    Clever Bird
                </h3>
            </a>
        </div>
    </div>
{% endblock %}
