{% extends '@CleverBird/Layouts/main.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ol class="breadcrumb">
                    <li><a href="{{ path('clever_bird_homepage') }}">Home</a></li>
                    <li><a href="{{ path('course_index') }}">Public Courses</a></li>
                    <li class="active">{{ course.name }}</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                {% if course.user == app.user %}
                    {{ form_start(delete_form, { 'attr' : {'class': 'pull-right' }}) }}
                    <button type="submit" class="btn btn-default btn-xs btn-danger" aria-label="Left Align">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete
                    </button>
                    {{ form_end(delete_form) }}
                {% endif %}

                <h1>{{ course.name }}</h1>
                <hr/>
                {% if course.user == app.user %}
                    <a href="{{ path('course_edit', { 'id': course.id }) }}">Edit</a>
                {% endif %}

                <p>{{ course.description }}</p>

            </div>
            <div class="col-xs-12">
                <h2>Course comments</h2>
                <hr/>
            </div>
            <div class="col-xs-12">
                <div id="disqus_thread"></div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}


    <script>
        var disqus_config = function () {
            this.page.remote_auth_s3 = '{{ disqus_hash(app.user) }}';
            this.page.api_key = '{{ disqus_key }}';
            this.page.url = '{{ path('course_show', { 'id': course.id }) }}'';
            this.page.identifier = {{ course.id }};
        };
    </script>

    {% javascripts
        'bundles/cleverbird/js/disqus.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
