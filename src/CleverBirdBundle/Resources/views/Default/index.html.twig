{% extends '@CleverBird/Layouts/main.html.twig' %}
{% block stylesheets %}
    {% stylesheets filter="compass"
        'bundles/cleverbird/css/main-page.sass'
     %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% stylesheets
        'vendor/lightbox2/dist/css/lightbox.min.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
{% block navbar %}
    <nav class="navbar navbar-default navbar-fixed-top navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('clever_bird_homepage') }}">
                    Clever Bird
                </a>
                <ul class="nav navbar-nav pull-right">
                    <li>
                        <a href="{{ path('login') }}" role="button">Login</a>
                    </li>
                    <li>
                        <a href="{{ path('registration') }}" role="button">Sign Up</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="main-block"></div>
        <div class="main-content">
            <h1 class="cover-heading">Clever Bird.</h1>
            <p class="lead">Clever Bird is an Educational platform with an extended contribution option and a lighter version for users from the less developed countries.</p>
            <p class="lead">
                <a href="{{ path('registration') }}" class="btn btn-lg btn-default">Sign Up right now!</a>
            </p>
        </div>
        <div class="info-block gray">
            <div class="container">
                <div class="info-inner">
                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <h2>Browse currently available courses!</h2>
                            <h3>People around the world create tons of new learning and training materials</h3>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <a href="{{ asset('images/1.png') }}" data-lightbox="1" data-title="Browse currently available courses!">
                                <img src="{{ asset('images/1.png') }}" alt="Browse currently available courses!" width="430"/>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="info-block yellow">
            <div class="container">
                <div class="info-inner">
                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <a href="{{ asset('images/2.png') }}" data-lightbox="1" data-title="Organize your time!">
                                <img src="{{ asset('images/2.png') }}" alt="Organize your time!" width="330"/>
                            </a>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <h2>Organize your time!</h2>
                            <h3>Look into upcoming events and manage your courses scheduling</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="info-block white">
            <div class="container">
                <div class="info-inner">
                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <h2>Team up into the groups for effective collaboration</h2>
                            <h3>To study the courses together and/or to connect with your colleagues and fellow lecturers</h3>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <a href="{{ asset('images/3.png') }}" data-lightbox="1" data-title="Team up into the groups for effective collaboration">
                                <img src="{{ asset('images/3.png') }}" alt="Team up into the groups for effective collaboration" width="430"/>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="info-block gray">
            <div class="container">
                <div class="info-inner">
                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <a href="{{ asset('images/7.png') }}" data-lightbox="1" data-title="Discuss courses and lectures">
                                <img src="{{ asset('images/7.png') }}" alt="Discuss courses and lectures" width="330"/>
                            </a>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <h2>Discuss courses and lectures</h2>
                            <h3>Contact your lecturer and/or fellow students!</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="info-block yellow">
            <div class="container">
                <div class="info-inner">
                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <h2>Extra contribution options</h2>
                            <h3>Edit your lectures with colleagues and improve them constantly!</h3>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <a href="{{ asset('images/4.png') }}" data-lightbox="1" data-title="Extra contribution options">
                                <img src="{{ asset('images/4.png') }}" alt="Extra contribution options" width="330"/>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="info-block white">
            <div class="container">
                <div class="info-inner">
                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <div class="col-xs-12">
                                <a href="{{ asset('images/5-1.png') }}" data-lightbox="1" data-title="Use powerful and convenient content editor!">
                                    <img src="{{ asset('images/5-1.png') }}" alt="Use powerful and convenient content editor!" width="230"/>
                                </a>
                            </div>
                            <div class="col-xs-12">
                                <a href="{{ asset('images/5-2.png') }}" data-lightbox="1" data-title="Use powerful and convenient content editor!">
                                    <img src="{{ asset('images/5-2.png') }}" alt="Use powerful and convenient content editor!" width="230"/>
                                </a>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <h2>Use powerful and convenient content editor!</h2>
                            <h3>Easy text formatting and attachments submitting / adding</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="info-block gray">
            <div class="container">
                <div class="info-inner">
                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <h2>Light version of courses and lectures for the less developed countries</h2>
                            <h3>Let students with poor internet connection get access to your courses, too!</h3>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <div class="col-xs-12">
                                <a href="{{ asset('images/6-1.png') }}" data-lightbox="1" data-title="Light version of courses and lectures for the less developed countries">
                                    <img src="{{ asset('images/6-1.png') }}" alt="Light version of courses and lectures for the less developed countries" width="230"/>
                                </a>
                            </div>
                            <div class="col-xs-12">
                                <a href="{{ asset('images/6-2.png') }}" data-lightbox="1" data-title="Light version of courses and lectures for the less developed countries">
                                    <img src="{{ asset('images/6-2.png') }}" alt="Light version of courses and lectures for the less developed countries" width="230"/>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer yellow">
            <div class="container">
                <p>
                    &copy; {{ 'now'|date('Y') }} <a href="mailto:moxnrl@gmail.com">Muffin Man</a>,
                    with his <a href="https://www.instagram.com/p/BBKpq-VvE45/?taken-by=mxnr">dog</a>.
                    Project created on <a href="https://koding.com">koding</a> hackathon.
                </p>
            </div>
        </div>
    </div>
{% endblock %}
{% block footer %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts
        'vendor/lightbox2/dist/js/lightbox.min.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
