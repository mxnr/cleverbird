{% extends '@CleverBird/Layouts/main.html.twig' %}
{% block stylesheets %}
    {{ parent() }}

    {% stylesheets filter="compass"
    'bundles/cleverbird/css/courses-tiles.sass'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ol class="breadcrumb">
                    <li><a href="{{ path('clever_bird_homepage') }}">Home</a></li>
                    <li class="active">My Courses</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-md-6">
                <h1 class="m-top-0">My Courses</h1>
            </div>
            <div class="col-xs-12 col-md-6">
                <a href="{{ path('course_new') }}"
                   class="btn btn-primary btn-lg btn-success pull-right">
                    <span class="glyphicon glyphicon-plus"></span> Create new course
                </a>
            </div>
        </div>
        <hr/>
    </div>
    {% if courses %}
        {% include '@CleverBird/Partials/course-grid.html.twig' %}
    {% else %}
        <div class="container">
            <div class="alert alert-info">
                Currently you didn't have any courses, but you can <a href="{{ path('course_new') }}">create</a> the first one!
            </div>
        </div>
    {% endif %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}

    {% javascripts
    'vendor/masonry/dist/masonry.pkgd.min.js'
    'bundles/cleverbird/js/courses-tiles.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
